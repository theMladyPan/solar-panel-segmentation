{% extends "base.j2" %}

{% block main %}
<div class="container">
    <div class="hero text-white p-5">
        <div class="container">
            <h1 class="display-4">Welcome to Solar Panel Segmentation</h1>
            <p class="lead">Efficiently segment and analyze solar panels from aerial images.</p>
        </div>
    </div>

    <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class=""
                aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2" class="active"
                aria-current="true"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"
                class=""></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item">
                <img src="{{ url_for('static', filename='img/example1.png') }}" class="d-block w-100" alt="First slide">
                <div class="container">
                    <div class="carousel-caption text-start">
                        <h1>Accurate Solar Panel Detection.</h1>
                        <p class="opacity-75">Efficiently identify and segment solar panels from aerial images.</p>
                        <p><a class="btn btn-lg btn-primary" href="#">Get Started</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item active">
                <img src="{{ url_for('static', filename='img/example2.png') }}" class="d-block w-100" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Advanced Image Processing.</h1>
                        <p>Utilize state-of-the-art algorithms for precise segmentation.</p>
                        <p><a class="btn btn-lg btn-primary" href="#">Learn More</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ url_for('static', filename='img/example3.png') }}" class="d-block w-100" alt="First slide">
                <div class="container">
                    <div class="carousel-caption text-end">
                        <h1>Comprehensive Analysis.</h1>
                        <p>Gain insights and analytics from segmented solar panel data.</p>
                        <p><a class="btn btn-lg btn-primary" href="#">Explore Features</a></p>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

{% endblock %}